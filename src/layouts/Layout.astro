---
import NavbarReact from "src/components/react/ui/Navbar";
// import Navbar from '@components/astro/common/Navbar.astro'
import Footer from "@components/Footer.astro";
import CookieConsentBanner from "@components/react/misc/CookieConsentBanner";

import "@/styles/index.scss";

interface Props {
  title: string;
}

const { title } = Astro.props;

const pyconLogoUrl =
  "https://th.pycon.org/images/common/2025/pyconth_logo@1x.png";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="All about Python conference in Thailand 2025"
    />
    <meta name="viewport" content="width=device-width" />

    <!-- Facebook Meta Tags -->
    <meta property="og:url" content="https://th.pycon.org/" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:site_name" content="TH PyCon 2025!" />
    <meta
      property="og:description"
      content="All about Python conference in Thailand 2025"
    />
    <meta property="og:image" content={pyconLogoUrl} />
    <meta property="og:image:width" content="643" />
    <meta property="og:image:height" content="256" />
    <meta property="og:image:type" content="image/png" />

    <!-- Twitter Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <!-- TODO: This should be replaced with Twitter account if available -->
    <meta property="twitter:domain" content="th.pycon.org" />
    <meta property="twitter:url" content="https://th.pycon.org/" />
    <meta name="twitter:title" content={title} />
    <meta
      name="twitter:description"
      content="All about Python conference in Thailand 2025"
    />
    <meta name="twitter:image" content={pyconLogoUrl} />
    <meta name="twitter:image:alt" content="PyCon Thailand Logo" />

    <link rel="icon" href="/favicon.ico" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <!-- <link rel="preconnect" href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&family=Montserrat:wght@400;500;600;700&family=Source+Code+Pro:wght@400;600;700&display=swap"> -->
    <!-- <link rel="preconnect" href="https://fonts.googleapis.com/css2?family=family=Montserrat:wght@400;500;600;700&family=Source+Code+Pro:wght@400;600;700&display=swap"> -->
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,400;0,500;0,600;1,400&family=Source+Code+Pro:wght@400;600;700&display=swap"
      rel="stylesheet"
    />

    <!-- <meta name="generator" content={Astro.generator} /> -->

    <title>{title}</title>
  </head>
  <body>
    <div class="h-screen">
      <div class="container relative mx-auto flex h-full flex-col bg-white">
        <!-- {!props.hideNavbar && <Navbar />} -->
        <NavbarReact client:load />
        <!-- <Navbar/> -->

        <div class=""><slot /></div>
        <div class="mt-4">
          <Footer />
        </div>
        <CookieConsentBanner client:only="react" />
      </div>
    </div>
  </body>
</html>
<style is:global></style>
